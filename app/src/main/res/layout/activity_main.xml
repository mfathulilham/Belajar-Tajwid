<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/background"
    tools:context=".MainActivity">
    <ImageView
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_judul"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv"
        android:layout_alignTop="@id/tv"
        android:layout_marginTop="40dp"
        android:text="" />

    <ImageButton
        android:id="@+id/ibBelajar"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/tv2"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/tv2"
        android:layout_marginEnd="10dp"
        android:background="@drawable/img_belajar"
        android:elevation="3dp" />

    <ImageButton
        android:id="@+id/ibTes"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignStart="@id/tv2"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/tv2"
        android:background="@drawable/img_tes"
        android:elevation="3dp" />

    <ImageButton
        android:id="@+id/ibExit"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/tv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/img_exit"
        android:elevation="3dp"
        />
    <ImageButton
        android:id="@+id/ibHelp"
        android:layout_margin="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/help"
        android:layout_alignParentEnd="true"
        android:elevation="3dp"/>

    <ImageButton
        android:id="@+id/ibAbout"
        android:layout_margin="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/about"
        android:layout_alignParentStart="true"/>

</RelativeLayout>