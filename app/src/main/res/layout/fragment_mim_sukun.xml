<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MimSukun">
    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:background="@drawable/back" />

    <ImageView
        style="@style/head"
        android:src="@drawable/head_mim" />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="" />

    <ImageButton
        android:id="@+id/ibMimi"
        style="@style/buttonBelajar"
        android:layout_alignTop="@+id/tv"
        android:layout_centerHorizontal="true"
        android:background="@drawable/img_imimi" />

    <ImageButton
        android:id="@+id/ibIkhsyafawi"
        style="@style/buttonBelajar"
        android:layout_alignTop="@+id/tv"
        android:layout_alignEnd="@id/tv"
        android:layout_marginEnd="80dp"
        android:background="@drawable/img_iksyafawi" />

    <ImageButton
        android:id="@+id/ibIdzsyafawi"
        style="@style/buttonBelajar"
        android:layout_alignStart="@+id/tv"
        android:layout_alignTop="@+id/tv"
        android:layout_marginStart="80dp"
        android:background="@drawable/img_idzsyafawi" />

</RelativeLayout>